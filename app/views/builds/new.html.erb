<h1>Create a New Build</h1>
<ul>
  <% if @errors %>
    <% @errors.each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  <% end%>
</ul>

<%= form_for @build do |f| %>
  <%= f.text_field :build_name, placeholder: "Build Name" %><br>
  CPU: <br><%= collection_select(:build, :cpu_id, Cpu.all, :id, :model, {:selected => Cpu.all.second}) %><br>
  Card: <br><%= collection_select(:build, :card_id, Card.all, :id, :model) %><br>
  Mobo: <br><%= collection_select(:build, :mobo_id, Mobo.all, :id, :model) %><br>
  Ram: <br><%= collection_select(:build, :ram_id, Ram.all, :id, :model) %><br>
  PSU: <br><%= collection_select(:build, :psu_id, Psu.all, :id, :model) %><br>
  Case: <br><%= collection_select(:build, :case_id, Case.all, :id, :model) %><br>
  Storage: <br><%= collection_select(:build, :storage_id, Storage.all, :id, :model) %><br>
  <%= f.submit "Create Build" %>
<% end %>
