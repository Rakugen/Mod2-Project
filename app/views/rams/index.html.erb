<h1>Ram List</h1>
<div class="card-row">
  <% @rams.each do |c| %>
    <div class="card">
      <%=image_tag("#{c.url}", class: "card-image") %>

    <div class="container">
      <h4><b><%= link_to c.model, "/rams/#{c.id}" %></b></h4>
    </div>
  </div>
  <% end %>
</div>

<h3>Most Popular: <%= Ram.most_popular %></h3>
