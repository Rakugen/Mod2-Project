<h1>Case List</h1>
<div class="card-row">
  <% @cases.each do |c| %>
    <div class="card">
      <%=image_tag("#{c.url}", class: "card-image") %>

    <div class="container">
      <h4><b><%= link_to c.model, "/cases/#{c.id}" %></b></h4>
    </div>
  </div>
  <% end %>
</div>

<h3>Most Popular: <%= Case.most_popular %></h3>
